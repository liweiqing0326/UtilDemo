<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_install_app"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Install App" />

        <Button
            android:id="@+id/btn_install_app_silent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Install App Silent" />

        <Button
            android:id="@+id/btn_uninstall_app"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Uninstall App" />

        <Button
            android:id="@+id/btn_uninstall_app_silent"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Uninstall App Silent" />

        <Button
            android:id="@+id/btn_launch_app"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Launch App" />

        <Button
            android:id="@+id/btn_get_app_details_settings"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Get App Details Settings" />

        <TextView
            android:id="@+id/tv_about_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" />
    </LinearLayout>
</ScrollView>
